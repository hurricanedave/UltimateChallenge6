<div class="customer">
	<div id="links">
		<nav>
			<ul>
				<li><%= link_to 'Edit', edit_customer_path(customer) %></li>
				<li><%= link_to 'x', customer, method: :delete, data: { confirm: 'Are you sure?' } %></li>
			</ul>
		</nav>
	</div>
<!-- 	<p id="edit"><%= link_to 'Edit', edit_customer_path(customer) %></p>
	<p id="destroy"><%= link_to 'x', customer, method: :delete, data: { confirm: 'Are you sure?' } %></p> -->

	<h2>
    <% if display_link_to_show %>
      <%= link_to customer.name, customer %>
    <% else %>
      <%= customer.name %>
    <% end %>
  </h2>

  <% if customer.image.present? %>
    <%= image_tag customer.image %>
  <% end %>

  <p>
    <strong>Phone:</strong>
    <%= customer.phone_number %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= customer.email %>
  </p>

  <p id="notes">
    <strong>Notes:</strong>
    <%= customer.notes %>
  </p>
</div>